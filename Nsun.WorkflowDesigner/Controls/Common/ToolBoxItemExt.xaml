<UserControl x:Class="Nsun.Tools.WorkflowDesigner.Controls.ToolBoxItemExt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ToolTip="{Binding ToolTipShow}" IsHitTestVisible="false" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ItemContext}" VerticalAlignment="Center" Foreground="Blue" Grid.Column="2" Margin="3"/>
        <Image Source="{Binding ImageHeader}" VerticalAlignment="Center" Margin="3" Grid.Column="1"/>
    </Grid>
</UserControl>
